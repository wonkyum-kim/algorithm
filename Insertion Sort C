/** Insertion sort C **/
/******2020.07.07******/

#include <stdio.h>

void insertion_sort(int arr[], int n)
{
	int i, j;
	int key;

	for (i = 1; i < n; i++)
	{
		key = arr[i];

		for (j = i - 1; j >= 0; j--)
		{
			if (arr[j] > key)
				arr[j + 1] = arr[j];
			else
				break;
		}

		arr[j + 1] = key;
	}
}

int main(void)
{
	int arr[] = { 5,2,4,6,1,3 };
	int i;
	int n = sizeof(arr) / sizeof(int);

	insertion_sort(arr, n);

	for (i = 0; i < n; i++)
		printf("%d ", arr[i]);
	return 0;

}
