/* Insertion sort C++ */

#include <vector>
#include <iostream>

template <typename T>
void insertion_sort(std::vector<T>& vec, const int& left, const int& right) {
    for (int i = left; i < right; ++i) {
        for (int j = i + 1; j > left&& vec[j - 1] < vec[j]; --j) {
            std::swap(vec[j], vec[j - 1]);
        }
    }
}

int main()
{
    std::vector<int> vec{ 5, 2, 4, 6, 1, 3 };
    insertion_sort(vec, 0, vec.size());
    for (int i = 0; i < vec.size(); ++i) {
        std::cout << vec[i] << " " << '\n';
    }
}
   
